<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#FFFFFF">

    <ImageView
        android:layout_marginTop="100dp"
        android:id="@+id/imageView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:src="@drawable/person"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent" />


    <TextView
        android:layout_marginTop="10dp"
        android:id="@+id/text_student_id"
        android:layout_width="287dp"
        android:layout_height="28dp"
        android:text="Student ID"
        app:fontFamily="@font/patrickhand_regular"
        android:textSize="18dp"
        app:layout_constraintTop_toBottomOf="@id/imageView"
        app:layout_constraintLeft_toLeftOf="@id/student_id"
        />

    <EditText
        android:id="@+id/student_id"
        android:layout_width="335dp"
        android:layout_height="48dp"
        android:background="@drawable/inputborder"
        android:hint="학번"
        android:textSize="22dp"
        android:paddingLeft="10dp"
        app:fontFamily="@font/omyu"
        android:inputType="number"
        android:maxLength="8"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@id/text_student_id" />

    <TextView
        android:layout_marginTop="20dp"
        android:id="@+id/text_user_name"
        android:layout_width="287dp"
        android:layout_height="28dp"
        android:text="Username"
        app:fontFamily="@font/patrickhand_regular"
        android:textSize="18dp"
        app:layout_constraintTop_toBottomOf="@id/student_id"
        app:layout_constraintLeft_toLeftOf="@id/student_id" />

    <EditText
        android:id="@+id/user_name"
        android:layout_width="335dp"
        android:layout_height="48dp"
        android:background="@drawable/inputborder"
        android:hint="닉네임"
        android:textSize="22dp"
        android:paddingLeft="10dp"
        app:fontFamily="@font/omyu"
        android:inputType="text"
        android:maxLength="10"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@id/text_user_name"
        android:layout_marginBottom="10dp" />

    <TextView
        android:layout_marginTop="20dp"
        android:id="@+id/text_password"
        android:layout_width="287dp"
        android:layout_height="28dp"
        android:text="Password"
        app:fontFamily="@font/patrickhand_regular"
        android:textSize="18dp"
        app:layout_constraintTop_toBottomOf="@id/user_name"
        app:layout_constraintLeft_toLeftOf="@id/user_name" />

    <EditText
        android:id="@+id/password"
        android:layout_width="335dp"
        android:layout_height="48dp"
        android:background="@drawable/inputborder"
        android:hint="비밀번호 12자리"
        android:textSize="22dp"
        android:paddingLeft="10dp"
        app:fontFamily="@font/omyu"
        android:inputType="textPassword"
        android:maxLength="12"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@id/text_password" />

    <TextView
        android:layout_marginTop="20dp"
        android:id="@+id/text_v_password"
        android:layout_width="287dp"
        android:layout_height="28dp"
        android:text="Verify Password"
        app:fontFamily="@font/patrickhand_regular"
        android:textSize="18dp"
        app:layout_constraintTop_toBottomOf="@id/password"
        app:layout_constraintLeft_toLeftOf="@id/password" />

    <EditText
        android:id="@+id/verify_password"
        android:layout_width="335dp"
        android:layout_height="48dp"
        android:background="@drawable/inputborder"
        android:hint="비밀번호확인"
        android:textSize="22dp"
        android:paddingLeft="10dp"
        app:fontFamily="@font/omyu"
        android:inputType="textPassword"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@id/text_v_password" />

    <ImageButton
        android:id="@+id/createAccountBtn"
        android:layout_marginTop="24dp"
        android:layout_width="335dp"
        android:layout_height="48dp"
        android:background="@drawable/border"
        android:contentDescription="Create account button"
        android:src="@drawable/createaccountbutton"
        app:layout_constraintTop_toBottomOf="@id/verify_password"
        app:layout_constraintLeft_toLeftOf="@id/verify_password" />

</androidx.constraintlayout.widget.ConstraintLayout>
